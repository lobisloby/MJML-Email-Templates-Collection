<mjml>
  <mj-head>
    <mj-font name="Nunito" href="https://fonts.googleapis.com/css2?family=Nunito:ital,wght@0,200..1000;1,200..1000&display=swap" />

    <mj-attributes>
      <mj-all font-family="Nunito, sans-serif" />
      <mj-text padding="0" color="#ffffff" />
    </mj-attributes>

    <mj-style>
      /* Navigation link styles */
      .nav-link {
        display: inline-block;
        padding: 10px 12px;
        color: #ffffff;
        text-decoration: none;
        font-size: 13px;
        font-family: 'Nunito', sans-serif;
        text-transform: uppercase;
        white-space: nowrap;
      }

      .nav-link:hover {
        color: #14e3a5ff;
      }

      .nav-links-wrapper {
        white-space: nowrap;
        display: inline-block;
      }

      /* Mobile/Desktop visibility */
      .mobile-logo-section {
        display: none;
        mso-hide: all;
      }

      .desktop-nav-section {
        display: table;
        width: 100%;
      }

      .mobile-nav-section {
        display: none;
        mso-hide: all;
      }

      /* Card text overflow fix */
      .card-heading div {
        word-wrap: break-word !important;
        overflow-wrap: break-word !important;
        word-break: break-word !important;
      }

      .card-description div {
        word-wrap: break-word !important;
        overflow-wrap: break-word !important;
      }

      /* Hero backgrounds */
      .hero-bg {
        background-size: cover !important;
        background-position: center center !important;
      }

      .editor-hero-bg {
        background-size: cover !important;
        background-position: center center !important;
      }

      /* Footer link styles */
      .footer-link {
        color: #ffffff !important;
        text-decoration: underline !important;
      }

      .footer-link:hover {
        color: #00FF83 !important;
      }

      /* Logo icon - fallback for email clients that don't support flex */
      .logo-icon {
        width: 45px;
        height: 45px;
        background-color: #00FF83;
        border-radius: 6px;
        text-align: center;
        line-height: 45px;
      }

      .logo-icon-inner {
        display: inline-block;
        width: 18px;
        height: 18px;
        background-color: #ffffff;
        border-radius: 50%;
        vertical-align: middle;
      }
    </mj-style>

    <mj-style>
      @media only screen and (max-width: 480px) {
      /* Mobile Navigation */
      .mobile-logo-section {
      display: block !important;
      }
      .mobile-logo-section > table {
      display: table !important;
      }

      .desktop-nav-section {
      display: none !important;
      mso-hide: all !important;
      max-height: 0 !important;
      overflow: hidden !important;
      }

      .mobile-nav-section {
      display: block !important;
      }
      .mobile-nav-section > table {
      display: table !important;
      }

      /* Hero Section Mobile Styles */
      .hero-section > table > tbody > tr > td {
      padding: 25px 15px !important;
      }

      .hero-column > table > tbody > tr > td {
      padding: 15px !important;
      }

      .hero-label div {
      font-size: 11px !important;
      padding-bottom: 8px !important;
      }

      .hero-heading div {
      font-size: 26px !important;
      line-height: 32px !important;
      padding-bottom: 10px !important;
      }

      .hero-description div {
      font-size: 11px !important;
      line-height: 16px !important;
      }

      /* First Hero Image - MOBILE */
      .hero-bg {
      height: 280px !important;
      background-size: cover !important;
      background-position: center center !important;
      }

      .hero-bg > table {
      height: 280px !important;
      }

      .hero-bg td {
      height: 280px !important;
      }

      /* Cards Section - MOBILE */
      .card-column {
      width: 100% !important;
      display: block !important;
      }

      .cards-section > table > tbody > tr > td {
      padding: 30px 20px !important;
      }

      .card-column > table > tbody > tr > td {
      padding-bottom: 40px !important;
      }

      .card-heading div {
      font-size: 20px !important;
      line-height: 26px !important;
      }

      .card-label div {
      font-size: 11px !important;
      }

      .card-description div {
      font-size: 11px !important;
      }

      .card-button table {
      width: 100% !important;
      }

      .card-button a {
      display: block !important;
      text-align: center !important;
      }

      /* Editors section title */
      .editors-title > table > tbody > tr > td {
      padding: 40px 20px 15px 20px !important;
      }

      /* Editor hero text with spacing */
      .editor-label div {
      font-size: 11px !important;
      padding: 0 10px 0px 10px !important;
      }

      .editor-heading div {
      font-size: 22px !important;
      line-height: 28px !important;
      padding: 0 10px 0px 10px !important;
      }

      .editor-description div {
      font-size: 11px !important;
      line-height: 16px !important;
      padding: 0 10px !important;
      }
      /* Stack columns on mobile */
      .footer-column {
      width: 100% !important;
      max-width: 100% !important;
      display: block !important;
      }

      /* Center logo on mobile */
      .logo-column div {
      text-align: center !important;
      }

      .logo-column table {
      margin: 0 auto !important;
      }

      /* Center badges on mobile */
      .badges-column {
      padding-top: 25px !important;
      }

      .badges-column table {
      margin: 0 auto !important;
      }

      .badge-wrapper table {
      margin: 0 auto !important;
      }

      /* Reduce social icon spacing on mobile */
      .social-icons td {
      padding: 0 8px !important;
      }

      /* Footer text on mobile */
      .footer-text div {
      font-size: 10px !important;
      line-height: 16px !important;
      padding-left: 15px !important;
      padding-right: 15px !important;
      }
      }
    </mj-style>
  </mj-head>

